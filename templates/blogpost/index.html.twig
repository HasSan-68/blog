{% extends 'base.html.twig' %}

{% block title %}Blogpost index{% endblock %}

{% block body %}
    <h1>Blogpost index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>KlantId</th>
            <th>Title</th>
            <th>Body</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for blogpost in blogposts %}
            <tr>

                <td>{{ blogpost.id }}</td>
                <td>{{ blogpost.klantid}}</td>
                <td>{{ blogpost.title }}</td>
                <td>{{ blogpost.body }}</td>
                <td>{{ blogpost.createdAt ? blogpost.createdAt|date('Y-m-d H:i:s T') : '' }}</td>
                <td>{{ blogpost.updatedAt ? blogpost.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('blogpost_show', {'id': blogpost.id}) }}">show</a>
                    <a href="{{ path('blogpost_edit', {'id': blogpost.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blogpost_new') }}">Create new</a>
{% endblock %}
