{% extends 'base.html.twig' %}

{% block title %}Blogpost{% endblock %}

{% block body %}
    <h1>Blogpost</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blogpost.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blogpost.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ blogpost.body }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ blogpost.createdAt ? blogpost.createdAt|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ blogpost.updatedAt ? blogpost.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blogpost_index') }}">back to list</a>

    <a href="{{ path('blogpost_edit', {'id': blogpost.id}) }}">edit</a>

    {{ include('blogpost/_delete_form.html.twig') }}
{% endblock %}
